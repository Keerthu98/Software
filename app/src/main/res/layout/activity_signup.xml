<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/login"	tools:context="com.example.vicky.e_coin.signup">

	<TextView
			android:text=""
			android:textColor="@color/red"
			android:textSize="18pt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
			android:id="@+id/textView2" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="124dp"
			app:layout_constraintHorizontal_bias="0.498"/>
	<EditText
			android:background="@drawable/bg_edittext_focused"
			android:textAlignment="center"
			android:textColor="@color/red"
			android:textSize="10pt"
			android:layout_width="270dp"
			android:layout_height="wrap_content"
			android:inputType="textPersonName"
			android:hint="*e-mail id"
			android:ems="10"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent" android:id="@+id/mailsp" android:layout_marginTop="12dp"
			app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintHorizontal_bias="0.496"/>
	<EditText
			android:background="@drawable/bg_edittext_focused"
			android:textAlignment="center"
			android:textColor="@color/red"
			android:textSize="10pt"
			android:layout_width="270dp"
			android:layout_height="wrap_content"
			android:inputType="textPassword"
			android:hint="* password"
			android:ems="10"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent" android:id="@+id/passsp" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toTopOf="@+id/passspcp" android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/mailsp" app:layout_constraintVertical_bias="1.0"
			app:layout_constraintHorizontal_bias="0.496"/>
	<EditText
			android:background="@drawable/bg_edittext_focused"
			android:textAlignment="center"
			android:textColor="@color/red"
			android:textSize="10pt"
			android:layout_width="270dp"
			android:layout_height="wrap_content"
			android:inputType="textPassword"
			android:hint="* Confirm password"
			android:ems="10"
			app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
			android:id="@+id/passspcp" app:layout_constraintVertical_bias="0.484"
			app:layout_constraintHorizontal_bias="0.496"/>
	<Button
			android:text="signup"
			android:background="@drawable/bg_aqua"
			android:layout_width="270dp"
			android:layout_height="wrap_content"
			app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
			android:id="@+id/signuprt" android:layout_marginTop="36dp"
			app:layout_constraintTop_toBottomOf="@+id/passspcp" app:layout_constraintHorizontal_bias="0.496"/>
	<Button
			android:text="login"

			android:background="@drawable/bg_red"
			android:layout_width="270dp"
			android:layout_height="wrap_content"
			app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
			android:id="@+id/loginrt" app:layout_constraintTop_toBottomOf="@+id/signuprt"
			app:layout_constraintHorizontal_bias="0.496" android:layout_marginTop="8dp"/>
</android.support.constraint.ConstraintLayout>
