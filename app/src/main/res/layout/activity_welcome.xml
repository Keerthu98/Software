<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context="com.example.vicky.e_coin.welcome"
android:background="@color/black">

	<Button
			android:text="Login / Signup"
			android:textSize="10pt"
			android:textAlignment="center"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/bg_aqua"
			android:id="@+id/welcome" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
			android:onClick="intent1" app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"/>
	<ImageView
			android:layout_width="257dp"
			android:layout_height="328dp" app:srcCompat="@drawable/home2"
			android:id="@+id/imageView3" app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent" app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"/>
	<TextView
			android:text="E-COIN"
			android:textAlignment="center"
			android:textColor="@color/aqua"
			android:textSize="15pt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/textView3" app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent" app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="232dp" app:layout_constraintHorizontal_bias="0.459"/>

</android.support.constraint.ConstraintLayout>
